{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "utils",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "utils/*"
      ]
    },
    "resolveJsonModule": true,
    "target": "es6",
  },
  "include": [
    "utils/**/*",
    "node_modules/axe-core",
    "node_modules/@types/puppeteer/index.d.ts"
  ]
}
